# Production Environment Configuration Template
# Copy this file to .env.production and fill in the actual values

NODE_ENV=production

# Database Configuration - REQUIRED
DB_HOST=your-database-host.com
DB_PORT=5432
DB_NAME=japanese_real_estate_prod
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis Configuration - REQUIRED
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# API Configuration - REQUIRED
PORT=3001
API_BASE_URL=https://api.your-domain.com
CORS_ORIGIN=https://your-domain.com

# Frontend Configuration - REQUIRED
REACT_APP_API_BASE_URL=https://api.your-domain.com
REACT_APP_ENVIRONMENT=production

# Logging
LOG_LEVEL=info

# Scraping Configuration
SCRAPING_DELAY_MIN=2000
SCRAPING_DELAY_MAX=5000
MAX_CONCURRENT_SCRAPERS=1
SCRAPING_USER_AGENTS=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36

# Translation - REQUIRED
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key
TRANSLATION_SERVICE=google
TRANSLATION_CACHE_TTL=86400

# Scheduler
SCHEDULER_DAILY_ENABLED=true
SCHEDULER_DAILY_CRON=0 2 * * *

# Security - REQUIRED
JWT_SECRET=your_very_secure_jwt_secret_at_least_32_characters_long

# Monitoring
HEALTH_CHECK_INTERVAL=30000
ERROR_NOTIFICATION_EMAIL=admin@your-domain.com

# Production optimizations
NODE_OPTIONS=--max-old-space-size=4096

# Optional: External Services
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
# DATADOG_API_KEY=your_datadog_api_key_for_monitoring