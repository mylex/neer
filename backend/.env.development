# Backend Development Environment Configuration
NODE_ENV=development

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=japanese_real_estate_dev
DB_USER=dev_user
DB_PASSWORD=dev_password
DATABASE_URL=postgresql://dev_user:dev_password@postgres:5432/japanese_real_estate_dev

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379

# API Configuration
PORT=3001
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Scraping Configuration
SCRAPING_DELAY_MIN=1000
SCRAPING_DELAY_MAX=3000
MAX_CONCURRENT_SCRAPERS=2
SCRAPING_USER_AGENTS=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Translation (use dummy keys for development)
GOOGLE_TRANSLATE_API_KEY=dummy_key_for_development
TRANSLATION_SERVICE=google
TRANSLATION_CACHE_TTL=3600

# Scheduler
SCHEDULER_DAILY_ENABLED=false
SCHEDULER_DAILY_CRON=0 2 * * *

# Development specific
DEBUG=app:*
NODE_OPTIONS=--max-old-space-size=2048