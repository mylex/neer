# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/japanese_real_estate_scraper
DB_HOST=localhost
DB_PORT=5432
DB_NAME=japanese_real_estate_scraper
DB_USER=username
DB_PASSWORD=password
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=2
DB_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Translation API Configuration
TRANSLATION_SERVICE=google
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key
AZURE_TRANSLATOR_KEY=your_azure_translator_key
AZURE_TRANSLATOR_REGION=your_azure_region

# Server Configuration
PORT=3001
NODE_ENV=development
API_BASE_URL=http://localhost:3001

# Scraping Configuration
SCRAPING_DELAY_MIN=1000
SCRAPING_DELAY_MAX=3000
MAX_CONCURRENT_SCRAPERS=3
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Security
JWT_SECRET=your_jwt_secret_key
CORS_ORIGIN=http://localhost:3000

# Monitoring
HEALTH_CHECK_INTERVAL=30000
ERROR_NOTIFICATION_EMAIL=admin@example.com

# Scheduler Configuration
SCHEDULER_DAILY_ENABLED=true
SCHEDULER_DAILY_CRON=0 2 * * *
SCHEDULER_TIMEZONE=Asia/Tokyo

# Notification Configuration
NOTIFICATIONS_EMAIL_ENABLED=false
NOTIFICATIONS_EMAIL_RECIPIENTS=admin@example.com,dev@example.com
NOTIFICATIONS_WEBHOOK_ENABLED=false
NOTIFICATIONS_WEBHOOK_URL=https://your-webhook-url.com/notifications
NOTIFICATIONS_SLACK_ENABLED=false
NOTIFICATIONS_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_TIMEOUT=30000