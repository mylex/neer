# Backend Production Environment Configuration
NODE_ENV=production

# Database Configuration (use environment variables in production)
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT:-5432}
DB_NAME=${DB_NAME}
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis Configuration
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT:-6379}
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# API Configuration
PORT=${PORT:-3001}
CORS_ORIGIN=${CORS_ORIGIN}

# Logging
LOG_LEVEL=${LOG_LEVEL:-info}

# Scraping Configuration
SCRAPING_DELAY_MIN=${SCRAPING_DELAY_MIN:-2000}
SCRAPING_DELAY_MAX=${SCRAPING_DELAY_MAX:-5000}
MAX_CONCURRENT_SCRAPERS=${MAX_CONCURRENT_SCRAPERS:-1}
SCRAPING_USER_AGENTS=${SCRAPING_USER_AGENTS}

# Translation
GOOGLE_TRANSLATE_API_KEY=${GOOGLE_TRANSLATE_API_KEY}
TRANSLATION_SERVICE=${TRANSLATION_SERVICE:-google}
TRANSLATION_CACHE_TTL=${TRANSLATION_CACHE_TTL:-86400}

# Scheduler
SCHEDULER_DAILY_ENABLED=${SCHEDULER_DAILY_ENABLED:-true}
SCHEDULER_DAILY_CRON=${SCHEDULER_DAILY_CRON:-0 2 * * *}

# Security
JWT_SECRET=${JWT_SECRET}

# Monitoring
HEALTH_CHECK_INTERVAL=${HEALTH_CHECK_INTERVAL:-30000}
ERROR_NOTIFICATION_EMAIL=${ERROR_NOTIFICATION_EMAIL}

# Production optimizations
NODE_OPTIONS=--max-old-space-size=4096