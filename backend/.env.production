# Production Environment Configuration
NODE_ENV=production
PORT=3001
API_BASE_URL=https://your-domain.com

# Database Configuration
DATABASE_URL=postgresql://prod_user:secure_password@db-host:5432/japanese_real_estate_prod
DB_HOST=db-host
DB_PORT=5432
DB_NAME=japanese_real_estate_prod
DB_USER=prod_user
DB_PASSWORD=secure_password
DB_SSL=true

# Redis Configuration
REDIS_URL=redis://redis-host:6379
REDIS_HOST=redis-host
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password

# Translation API Configuration
TRANSLATION_SERVICE=google
GOOGLE_TRANSLATE_API_KEY=production_google_translate_api_key
AZURE_TRANSLATOR_KEY=production_azure_translator_key
AZURE_TRANSLATOR_REGION=production_azure_region

# Scraping Configuration (conservative for production)
SCRAPING_DELAY_MIN=2000
SCRAPING_DELAY_MAX=5000
MAX_CONCURRENT_SCRAPERS=1
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE_PATH=/var/log/japanese-real-estate-scraper/app.log

# Security
JWT_SECRET=production_jwt_secret_key_very_secure
CORS_ORIGIN=https://your-frontend-domain.com

# Monitoring
HEALTH_CHECK_INTERVAL=60000
ERROR_NOTIFICATION_EMAIL=admin@your-domain.com